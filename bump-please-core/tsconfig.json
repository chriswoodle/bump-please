{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "incremental": true
    },
    "exclude": [
        "dist"
    ],
    "include": [
        "**/*.ts",
        "**/*.*.ts"
    ],
    "references": []
}
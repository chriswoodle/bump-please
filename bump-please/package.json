{
  "name": "bump-please",
  "author": "Chris Woodle",
  "description": "Bump Please",
  "license": "MIT",
  "type": "module",
  "version": "1.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriswoodle/bump-please"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "__bump-please_bash_complete": "dist/bash-complete.js",
    "bump-please": "dist/cli.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "postinstall": "bump-please install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": true
  },
  "dependencies": {
    "@stricli/auto-complete": "^1.2.0",
    "@stricli/core": "^1.2.0",
    "bump-please-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "tsup": "^6.7.0",
    "typescript": "5.6.x"
  }
}
